<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:padding="16dp">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a ticket!"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:layout_marginTop="200sp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/awardA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A"
        android:layout_marginTop="25sp"
        android:textColor="@color/white"
        android:onClick="AwardAChoosen"
        android:background="@drawable/rounded_corners"
        app:layout_constraintTop_toBottomOf="@+id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/awardB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="B"
        android:layout_marginTop="15sp"
        android:textColor="@color/white"
        android:onClick="AwardBChoosen"
        android:background="@drawable/rounded_corners"
        app:layout_constraintTop_toBottomOf="@+id/awardA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/awardC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="C"
        android:textColor="@color/white"
        android:layout_marginTop="15sp"
        android:onClick="AwardCChoosen"
        android:background="@drawable/rounded_corners"
        app:layout_constraintTop_toBottomOf="@+id/awardB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/awardD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="D"
        android:textColor="@color/white"
        android:layout_marginTop="15sp"
        android:onClick="AwardDChoosen"
        android:background="@drawable/rounded_corners"
        app:layout_constraintTop_toBottomOf="@+id/awardC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70sp"
        android:textAllCaps="true"
        android:text="Logout"
        android:textColor="@color/white"
        android:background="@drawable/rounded_corners"
        android:onClick="onLogoutClicked"
        app:layout_constraintTop_toBottomOf="@+id/awardD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>